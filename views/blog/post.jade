extends layout-blog

block pageTitle
  title #{title} | Caitlin Bailey, Front End Web Developer

block post
  header.page-header
    date.blog-date(datetime="#{date}") #{moment(date).format("MMM D, YYYY")}
    h1.heading.heading--main.no-b-margin=title
  div.inner-wrap.text--body.blog-post-body
    != html
