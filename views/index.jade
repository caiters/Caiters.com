extends layout

block content
  
  // h1.page-title Caitlin Bailey, Front End Web Developer
  
  section.recent-project.recent-project--wa
    a(href="/projects/webadvanced")
      h2.heading.heading--kicker Recent Project
      h3.heading.heading--main.no-b-margin Web Advanced
      span.btn.btn--outline.btn--white View Project
      
