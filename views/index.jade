    div.trio.trio--img.group
      div.trio__col
        a(href="/projects")
          img(src="http://www.placehold.it/300x300/222")
          span Project Portfolio
      div.trio__col
        a(href="/resume")
          img(src="http://www.placehold.it/300x300/222")
          span Resume
      div.trio__col
        a(href="/blog")
          img(src="http://www.placehold.it/300x300/222")
          span Blog
