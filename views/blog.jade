extends layout

block content
  header.page-header
    h1.heading--main.heading Blog
  div.inner-wrap
    ul
      each post in posts
        li
          a(href='/blog/#{post.filename}')
            article.blog-article
              h1=post.title
              date(datetime='2015-10-10') Oct 10 2015
              p=post.excerpt
              span.btn Read More
